<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyViewFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <com.cjq.littletools.customview.CircleDiagram
        android:id="@+id/pie_diagram"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <com.cjq.littletools.customview.Painter
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/hatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="哈哈"/>
    <TextView
        android:id="@+id/timeText"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="1"
        />
    <TextView
        android:id="@+id/abc_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"/>

    <TextView
        android:id="@+id/pro_text"
        android:layout_width="wrap_content"
        android:text="PropertyHolder"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <com.cjq.littletools.customview.MyTextView
        android:id="@+id/my_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>